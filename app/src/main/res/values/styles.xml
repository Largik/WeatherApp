<resources>

    <style name="Widget.Theme.WeatherApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UpdateWhiteText" parent="WhiteText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DarkGreyText">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="LightGreyText">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="DefaultWhiteText" parent="WhiteText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailText" parent="WhiteText">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextBold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="WhiteTextBold" parent="WhiteText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TodayCardAvgTempStyle" parent="WhiteText">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="TodayCardMinTempStyle" parent="DarkGreyText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TodayCardMaxTempStyle" parent="LightGreyText">
        <item name="android:textSize">30sp</item>
    </style>
</resources>